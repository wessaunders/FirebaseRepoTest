<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uco.wsaunders.firebaserepotest.RecordActivity">

    <Button
        android:text="Add User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="14dp"
        android:id="@+id/addUser" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/removeUser"
        android:layout_alignStart="@+id/removeUser"
        android:layout_marginTop="19dp"
        android:id="@+id/search"
        android:hint="Search Criteria" />

    <Button
        android:text="Find User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/search"
        android:layout_alignRight="@+id/addUser"
        android:layout_alignEnd="@+id/addUser"
        android:id="@+id/findUser" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/search"
        android:layout_marginTop="36dp"
        android:id="@+id/foundUser"
        android:layout_alignRight="@+id/findUser"
        android:layout_alignEnd="@+id/findUser"
        android:layout_alignLeft="@+id/search"
        android:layout_alignStart="@+id/search" />

    <Button
        android:text="Remove User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:id="@+id/removeUser"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/findAndRemove"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Find and Remove User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/findAndRemove"
        android:layout_alignBaseline="@+id/addUser"
        android:layout_alignBottom="@+id/addUser"
        android:layout_alignLeft="@+id/removeUser"
        android:layout_alignStart="@+id/removeUser" />
</RelativeLayout>
